#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo 'ğŸ—ï¸ğŸ‘· Styling, testing and building your project before committing'

# Check Prettier standards
pnpm check-format ||
(
	echo 'Husky: âŒ Prettier Check Failed. Format code add changes and try commit again.';
	false;
)

# Check ESLint Standards
pnpm check-lint ||
(
	echo 'Husky: âŒ ESLint Check Failed. Make the required changes listed above, add changes and try to commit again.'
	false; 
)

# If everything passes... Now we can commit
echo 'Husky: âœ… All check passed! Trying to build now.'

pnpm build ||
(
	echo 'Husky: âŒ Build failed. View the errors above to see why.'
	false;
)

# If everything passes... Now we can commit
echo 'Husky: âœ… Committing changes.'